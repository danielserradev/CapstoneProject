@model IEnumerable<RentX.Models.PaymentRequest>

@{
    ViewBag.Title = "GetPaymentRequests";
}

<h2>GetPaymentRequests</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RenterId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RenterId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ItemId)
        </td>
        <td>
            @Html.ActionLink("Pay Request", "PayRequest", "Renters", new { id = item.RenterId, ItemId = item.ItemId }, null)
